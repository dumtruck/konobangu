    "typescript": "^5.8.3",
    "ultracite": "^4.2.10"
  },
  "pnpm": {
    "overrides": {
      "codemirror-graphql>@codemirror/language": "^6.11.1"
    },
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "@parcel/watcher",
